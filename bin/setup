#!/bin/bash

set -euo pipefail

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
FUNCTIONS="${DIR}/functions"

if [ -e "$FUNCTIONS" ]; then
  source "$FUNCTIONS"
else
  printf "\n ⚠️ functions not found!\n"
  exit 1
fi

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until `setup` has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# ==============================================================================
# HOME
# ==============================================================================

title "Adding home folders"

home_folders=(
  ".ctags.d"
  ".npm-packages"
  ".ssh/sockets"
  ".ssl"
  ".zsh/cache"
  "bin"
  "labs"
  "repos"
)
for home_folder in "${home_folders[@]}"; do
  mkdir -p "${HOME}/$home_folder"
done
print_success "Done!"

# ==============================================================================
# MACOS
# ==============================================================================

title "Updating macOS. If this requires a restart, run the script again."

sudo softwareupdate -iaR --verbose
print_success "Done!"

# ==============================================================================
# XCODE COMMAND LINE TOOLS
# ==============================================================================

if [ -f "$(xcode-select -v)" ]; then
  title "Installing Xcode Command Line Tools"

  xcode-select --install
  print_success "Done!"
fi

# ==============================================================================
# HOMEBREW
# ==============================================================================

if [ -f "$(brew -v)" ]; then
  title "Installing Homebrew"

  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  print_success "Done!"
fi

title "Installing global Homebrew packages"

brew -v update
brew upgrade --force-bottle

homebrew_packages=(
  "git"
  "zsh"
  "vim"
  "neovim"
  "tmux"
  "node"
  "yarn"
)
for homebrew_package in "${homebrew_packages[@]}"; do
  brew install "$homebrew_package"
done

brew -v cleanup
brew -v doctor
print_success "Done!"

# ==============================================================================
# ZPLUG
# ==============================================================================

ZPLUG_DIR="${HOME}/.zplug"
if [ ! -s "$ZPLUG_DIR" ]; then
  title "Installing zplug"

  curl -sL --proto-redir -all,https https://raw.githubusercontent.com/zplug/installer/master/installer.zsh | zsh
  print_success "Done!"
fi

# ==============================================================================
# VIM-PLUG
# ==============================================================================

VIMPLUG_DIR="${HOME}/.local/share/nvim/site/autoload/plug.vim"
if [ ! -s "$VIMPLUG_DIR" ]; then
  title "Installing vim-plug"

  curl -fLo "$VIMPLUG_DIR" --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
  print_success "Done!"
fi

# ==============================================================================
# TMUX PLUGIN MANAGER
# ==============================================================================

TPM_DIR="${HOME}/.tmux/plugins/tpm"
if [ ! -s "$TPM_DIR" ]; then
  title "Installing Tmux Plugin Manager"

  git clone https://github.com/tmux-plugins/tpm "$TPM_DIR"
  print_success "Done!"
fi

# ==============================================================================
# RESTART
# ==============================================================================

echo
if ask "Do you want to restart your computer?" Y; then
  osascript -e 'tell app "loginwindow" to «event aevtrrst»'
fi
