#!/bin/bash

set -euo pipefail

default='true'
homebrew=''
npm=''
ruby=''
composer=''
vim=''
mas=''
os=''

function HELP {
  echo "Usage:"
  echo -e "upgrade [options]"\\n
  echo "Options:"
  echo "-a  --Upgrade all"
  echo "-b  --Upgrade Homebrew packages"
  echo "-n  --Upgrade npm packages"
  echo "-r  --Upgrade Ruby gems"
  echo "-c  --Upgrade Composer packages"
  echo "-v  --Upgrade Vim plugins"
  echo "-m  --Upgrade Mac App Store apps"
  echo -e "-o  --Upgrade macOS"\\n
  echo -e "Default: upgrade -b -n -r -c -v -m"
  exit 1
}

while getopts 'bnrcvmoah' flag; do
  case "${flag}" in
    b) homebrew='true' default='' ;;
    n) npm='true' default='' ;;
    r) ruby='true' default='' ;;
    c) composer='true' default='' ;;
    v) vim='true' default='' ;;
    m) mas='true' default='' ;;
    o) os='true' default='' ;;
    a) homebrew='true'
       mas='true'
       npm='true'
       os='true'
       ruby='true'
       vim='true' ;;
    h) HELP
       exit 1 ;;
    *) HELP
       exit 1 ;;
  esac
done


# ==============================================================================
# HOMEBREW
# ==============================================================================

if [ $homebrew ] || [ $default ]; then
  echo "------------------------------"
  echo "Upgrading Homebrew packages"
  brew -v update
  brew upgrade --force-bottle
  brew cu --all
  brew -v cleanup
  brew -v doctor
fi


# ==============================================================================
# NPM
# ==============================================================================

if [ $npm ] || [ $default ]; then
  echo "------------------------------"
  echo "Upgrading npm packages"
  npx npm-check -gu
fi


# ==============================================================================
# RUBY
# ==============================================================================

if [ $ruby ] || [ $default ]; then
  echo "------------------------------"
  echo "Upgrading Ruby gems"
  gem update --system
  gem update --no-document
fi


# ==============================================================================
# COMPOSER
# ==============================================================================

if [ $composer ] || [ $default ]; then
  echo "------------------------------"
  echo "Upgrading Composer packages"
  composer global update
fi


# ==============================================================================
# VIM
# ==============================================================================

if [ $vim ] || [ $default ]; then
  echo "------------------------------"
  echo "Upgrading Vim plugins"
  nvim +PlugUpgrade +PlugInstall +PlugUpdate +PlugClean +qall
fi


# ==============================================================================
# MAC APP STORE
# ==============================================================================

if [ $mas ] || [ $default ]; then
  echo "------------------------------"
  echo "Upgrading Mac App Store apps"
  mas upgrade
fi


# ==============================================================================
# MACOS
# ==============================================================================

if [ $os ]; then
  echo "------------------------------"
  echo "Upgrading macOS"
  sudo softwareupdate -iaR --verbose
fi

