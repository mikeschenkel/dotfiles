# ==============================================================================
# TAPS
# ==============================================================================

tap "caskroom/cask"
tap "caskroom/versions"
tap "neovim/neovim"
tap "bramstein/webfonttools"
tap "buo/cask-upgrade"
tap "universal-ctags/universal-ctags"

# ==============================================================================
# HOMEBREW
# ==============================================================================

# Shells
brew "bash", link: true
brew "zsh"

# Core Utilities
brew "coreutils"
brew "binutils"
brew "diffutils"
brew "moreutils"
brew "findutils"
brew "gnu-indent"
brew "gnu-sed"
brew "gnu-tar"
brew "gnu-which"
brew "gnutls"
brew "gawk"
brew "grep"

# Command-line Utilities
brew "wget"
brew "nmap"
brew "ngrep"
brew "htop"
brew "tree"
brew "openssh"
brew "screen"
brew "rsync"
brew "gzip"
brew "unzip"
brew "unrar"
brew "make"
brew "less"
brew "imagemagick"

brew "universal-ctags", args: ["HEAD"]
brew "reattach-to-user-namespace"
brew "ack"
brew "ag"
brew "z"
brew "exa"
brew "bat"
brew "fd"
brew "ripgrep"
brew "ncdu"
brew "tldr"
brew "prettyping"
brew "ren"
brew "shellcheck"
brew "youtube-dl"

# Development
brew "node"
brew "yarn"
brew "rbenv"
brew "composer"
brew "python3"

# Editors
brew "nano"
brew "vim"
brew "tmux"
brew "neovim"
# brew "macvim"

# Git
brew "git"
brew "git-extras"
brew "git-flow-avh"
brew "hub"
brew "diff-so-fancy"

# Font Tools
brew "woff2"
brew "sfnt2woff"
brew "sfnt2woff-zopfli"

